{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@api/*": ["./app/api/*"],
      "@constants/*": ["./constants/*"],
      "@components/*": ["./app/_components/*"],
      "@libs/*": ["./app/_libs/*"],
      "@scss/*": ["./app/_scss/*"],
      "@utilities/*": ["./app/_utilities/*"],
      "@customTypes/*": ["./app/_custom-types/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2015",
    "typeRoots": ["./@types/**"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "app/api/posts",
    "app/api/projects"
  ],
  "exclude": ["node_modules"]
}
